---
# Based on ansible-lint config
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  empty-lines:
    max: 3
    level: error
  hyphens:
    level: error
  line-length: disable
  new-lines:
    type: unix
  truthy:
    allowed-values:
      - 'true'
      - 'false'
      - 'yes'
      - 'no'
